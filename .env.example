NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase (server-side — service role key bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY=       # Supabase dashboard → Settings → API → service_role

# Custom JWT Auth
JWT_SECRET=                      # generate: openssl rand -hex 32

# Site URL (used for redirects, sitemap, OG tags)
NEXT_PUBLIC_SITE_URL=https://giftscart.netlify.app

# Razorpay (India payments - INR)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
NEXT_PUBLIC_RAZORPAY_KEY_ID=       # Same as RAZORPAY_KEY_ID, exposed to browser

# Stripe (International payments - USD)
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal (International payments - USD alternative)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
NEXT_PUBLIC_PAYPAL_CLIENT_ID=      # Same as PAYPAL_CLIENT_ID, exposed to browser

# Email
BREVO_API_KEY=
BREVO_SENDER_EMAIL=noreply@giftscart.in
BREVO_SENDER_NAME=Gifts Cart India

# AI
ANTHROPIC_API_KEY=               # Claude API — product content generation
OPENAI_API_KEY=                  # GPT-image-1 — product image generation

# Google Places (area/address autocomplete)
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=   # Google Places API key (for client-side area/address autocomplete)
GOOGLE_PLACES_API_KEY=               # Server-side Google Places API key (for /api/location/search fallback; falls back to NEXT_PUBLIC key if not set)

# Mappls / MapMyIndia (area/locality search)
MAPPLS_CLIENT_ID=                # From auth.mappls.com/console
MAPPLS_CLIENT_SECRET=            # From auth.mappls.com/console
